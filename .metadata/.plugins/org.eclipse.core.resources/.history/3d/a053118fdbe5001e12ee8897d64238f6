package Inheritanse;
import java.util.*;
class Vehicles
{
	
	private String Vech_model;
	private int Regis_number;
	private int Vech_speed; //km/h
	private int Fuel_Capacity;   //li
	private int Ful_Counsumption;  //KM/lit
	
	Vehicles(String Vech_model, int Regis_number, int Vech_speed,int Fuel_Capacity)
	{
		this.Vech_model=Vech_model;
		this.Regis_number=Regis_number;
		this.Vech_speed=Vech_speed;
		this.Fuel_Capacity=Fuel_Capacity;
		
	}
	
	void setVech_model(String Vech_model )
	{
		this.Vech_model=Vech_model;
	}
	
	void setRegis_number(int Regis_number)
	{
		this.Regis_number=Regis_number;
	}
	
	void setVech_speed(int Vech_speed)
	{
		this.Vech_speed=Vech_speed;
	}
	
	void setFuel_Capacity(int Fuel_Capacity)
	{
		this.Fuel_Capacity=Fuel_Capacity;
	}
	
	void setFul_Counsumption()
	{
		this.Ful_Counsumption=Ful_Counsumption;
	}
	
	// getMethode
	
	String getVech_model()
	{
		return Vech_model;
	}
	
	int getRegis_number()
	{
		return Regis_number;
	}
	
	int getVech_speed()
	{
		return Vech_speed;
	}
	
	int getsFuel_Capacity()
	{
		return Fuel_Capacity;
	}
	
	int Ful_Counsumption()
	{
		return Ful_Counsumption;
	}
	
	// methoed for the Calculation of the fule needed
	int fuelNeede(int distanse)
	{
		 int fule_needed=0;
		 // logic for the calculation of the fule needed for the vechile
		return fule_needed;
	}
	// methoed for the Calculation of the Distanse coverdede
	int distCoverded(int time)
	{
		int dist_Coverded=0;
		
		return dist_Coverded;
	}
	
	void Displey()

	{
		System.out.println(Vech_model+"\t"+Regis_number+"\t"+Vech_speed+"\t"+Fuel_Capacity+"\t"+Ful_Counsumption);
	}
	
}

class Bus extends Vehicles
{
	int Num_Pasenger;

	Bus(int Num_Pasenger,String Vech_model, int Regis_number, int Vech_speed,int Fuel_Capacity)
	{
		super(Vech_model, Regis_number, Vech_speed, Fuel_Capacity);
		this.Num_Pasenger=Num_Pasenger;
	}
	
}
class Truck extends Vehicles
{
	int Cargo_Wight;
	Truck(int Cargo_Wight,String Vech_model, int Regis_number, int Vech_speed,int Fuel_Capacity)
	{
		super(Vech_model, Regis_number, Vech_speed, Fuel_Capacity);
		this.Cargo_Wight=Cargo_Wight;
	}
}

public class Transport
{

	public static void main(String[] args)
	{
		
		int Cargo_Wight=100;
		String Vech_model="MH2029";
		int Regis_number=1234;
		int Vech_speed=40;
		int Fuel_Capacity=100;
		
		
		
		
		Truck ref_truck=new Truck(Cargo_Wight,Vech_model,Regis_number,Vech_speed,Fuel_Capacity);
		ref_truck.Displey();
		

	}

}
